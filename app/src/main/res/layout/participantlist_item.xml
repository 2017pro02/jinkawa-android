<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:text="陣川陣川陣川陣川"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/participant_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/participant_name"
        android:layout_below="@+id/participant_name"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/participant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/participant_name"
        android:layout_below="@+id/participant_gender"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/participant_tell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/participant_name"
        android:layout_below="@+id/participant_address"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/black"
        android:text="TextView" />


</RelativeLayout>
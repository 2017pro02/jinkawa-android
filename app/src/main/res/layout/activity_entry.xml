<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taross.jinkawa_android.EntryActivity"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">


        <Button
        android:id="@+id/button_entry_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申し込む"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_marginTop="89dp"
            android:paddingTop="0dp"
            android:theme="@style/AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_event_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BaseToolbar"
        android:background="@color/jipriMainColor"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:popupTheme="@android:style/Theme.Material"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_event_entry">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInput_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/AppTheme.Design.TextAppearance.Design.Hint"
            app:theme="@style/AppTheme.Design.TextInputLayout">

            <EditText
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/toolbar_event_entry"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="氏名" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
        android:id="@+id/textInput_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/AppTheme.Design.TextAppearance.Design.Hint"
        app:theme="@style/AppTheme.Design.TextInputLayout">

            <EditText
                android:id="@+id/text_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_age"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:hint="住所" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInput_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/AppTheme.Design.TextAppearance.Design.Hint"
            app:theme="@style/AppTheme.Design.TextInputLayout">

        <EditText
            android:id="@+id/text_tell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_address"
            android:layout_toEndOf="@+id/appbar"
            android:ems="10"
            android:inputType="phone"
            android:hint="電話番号" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInput_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/AppTheme.Design.TextAppearance.Design.Hint"
            app:theme="@style/AppTheme.Design.TextInputLayout">

        <EditText
            android:id="@+id/text_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radioGroup"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="年齢" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text=" 性別"
                android:textColor="#000000"
                android:textSize="8pt"
                android:layout_marginRight="40dp"
                android:visibility="visible" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_name"
                android:layout_centerHorizontal="true"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/button_gender_man"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:checked="true"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/button_gender_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="0.08"
                    android:text="女" />

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

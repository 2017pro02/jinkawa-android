<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taross.jinkawa_android.NoticeCreateActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_notice_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BaseToolbar"
        android:background="@color/jipriMainColor"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="@color/white"
        android:popupTheme="@style/PopupOverlay"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar_notice_create">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="部署名"
                android:textColor="#222222" />

            <Spinner
                android:id="@+id/spinner_department"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/title_department"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/title_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinner_department"
                android:layout_marginTop="21dp"
                android:text="タイトル"
                android:textColor="#222222" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInput_notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/AppTheme.Design.TextAppearance.Design.Hint"
                app:theme="@style/AppTheme.Design.TextInputLayout">

                <EditText
                    android:id="@+id/edit_notice_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="10文字以内で入力"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/title_notice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInput_capacity"
                android:layout_marginTop="20dp"
                android:text="日付"
                android:textColor="#222222" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInput_notice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_notice_date"
                android:weightSum="1"
                app:hintTextAppearance="@style/AppTheme.Design.TextAppearance.Design.Hint"
                app:theme="@style/AppTheme.Design.TextInputLayout">

                <TextView
                    android:id="@+id/edit_notide_date"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="下のボタンで入力"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button_notice_date"
                    android:layout_width="150dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="0dp"

                    android:background="@drawable/common_google_signin_btn_icon_light"
                    android:text="日付を選択" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/title_notice_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInput_eventdate_end"
                android:layout_marginTop="20dp"
                android:text="説明文"
                android:textColor="#222222" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInput_notice_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_description"
                app:hintTextAppearance="@style/AppTheme.Design.TextAppearance.Design.Hint"
                app:theme="@style/AppTheme.Design.TextInputLayout">

                <EditText
                    android:id="@+id/edit_notice_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="250字以内で入力"
                    android:inputType="textMultiLine" />

                <Button
                    android:id="@+id/button_notice_create"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textInput_deadline"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:text="お知らせを作成する"
                    />

            </android.support.design.widget.TextInputLayout>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>
